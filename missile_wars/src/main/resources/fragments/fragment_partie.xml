<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.*?>
<?import missile_wars.frontal.controles.FlexBoxPartie?>

<VBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="missile_wars.frontal.vues.fragments.FragmentPartie" 
    styleClass="conteneur,vue-parties">
    <HBox>
        <Pane styleClass="grand-espace-horizontal"/>
        <FlexBoxPartie HBox.hgrow="ALWAYS" styleClass="conteneur,parties" fx:id="horizontalOuVertical">
            <HBox styleClass="partie-hbox">
                <Pane  HBox.hgrow="ALWAYS" minHeight="20" minWidth="20"/>
                <Label
                    fx:id="resultatPartie"
                    styleClass="label-historique">
                </Label>
                <Pane minHeight="20" minWidth="20"/>

                <Label
                    fx:id="labelNomPremierJoueur"
                    styleClass="label-historique">
                </Label>
                <Pane minHeight="20" minWidth="20"/>

                <Label
                    text="Vs"
                    styleClass="label-historique">
                </Label>
                <Pane minHeight="20" minWidth="20"/>

                <Label
                    fx:id="labelNomDeuxiemeJoueur"
                    styleClass="label-historique">
                </Label>
                <Pane minHeight="20" minWidth="20"/>

                <Label
                    text="%nbMissilesJ1"
                    styleClass="label-historique">
                </Label>
                <Pane minHeight="20" minWidth="20"/>

                <Label
                    fx:id="labelNbMissilesJ1"
                    styleClass="label-historique">
                </Label>
                <Pane minHeight="20" minWidth="20"/>

                <Label
                    text="%nbMissilesJ2"
                    styleClass="label-historique">
                </Label>
                <Pane minHeight="20" minWidth="20"/>

                <Label
                    fx:id="labelNbMissilesJ2"
                    styleClass="label-historique">
                </Label>
                <Pane  HBox.hgrow="ALWAYS" minHeight="20" minWidth="20"/>
                
                <Button 
                    fx:id="boutonRetirerPartie" 
                    text="%retirerPartie"
                    styleClass="bouton">
                </Button>
            </HBox>
            <HBox styleClass="partie-hbox">
                <Pane  HBox.hgrow="ALWAYS" minHeight="20" minWidth="20"/>
                <Label
                    text="%nbPointsJ1"
                    styleClass="label-historique">
                </Label>
                <Pane minHeight="20" minWidth="20"/>

                <Label
                    fx:id="labelPointageJ1"
                    styleClass="label-historique">
                </Label>
                <Pane minHeight="20" minWidth="20"/>

                <Label
                    text="%nbPointsJ2"
                    styleClass="label-historique">
                </Label>
                <Pane minHeight="20" minWidth="20"/>

                <Label
                    fx:id="labelPointageJ2"
                    styleClass="label-historique">
                </Label>
                <Pane minHeight="20" minWidth="20"/>

                <Label
                    fx:id="labelDate"
                    styleClass="label-historique">
                </Label>
                <Pane  HBox.hgrow="ALWAYS" minHeight="20" minWidth="20"/>
            </HBox>
        </FlexBoxPartie>
        <Pane styleClass="grand-espace-horizontal"/>
    </HBox>
    <Pane styleClass="petit-espace-vertical"/>
</VBox>