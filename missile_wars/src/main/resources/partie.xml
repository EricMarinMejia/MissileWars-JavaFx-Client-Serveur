<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import missile_wars.frontal.controles.CanvasPartie?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>

<VBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="missile_wars.frontal.vues.VuePartie"
    fx:id="vboxPartie"
    styleClass="conteneur"
    id="vue-menu">

    <Pane styleClass="petit-espace-vertical" />

    <HBox VBox.vgrow="ALWAYS" styleClass="conteneur" id="jeu-conteneur">

        <Pane styleClass="petit-espace-horizontal" />

        <CanvasPartie
            HBox.hgrow="ALWAYS"
            fx:id="canvasJeu"
            id="idJeu">
        </CanvasPartie>

        <Pane styleClass="petit-espace-horizontal" />

    </HBox>

    <Pane styleClass="petit-espace-vertical" />

    <HBox styleClass="conteneur">

        <Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal" />

        <Label
            fx:id="labelNomPremierJoueur"
            styleClass="label-nom-joueur">
        </Label>

        <Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal" />

        <Label
            fx:id="labelScorePremierJoueur"
            styleClass="label-nom-joueur">
        </Label>

        <Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal" />

        <Button
            fx:id="boutonQuitter"
            text="%buttonHistorique"
            styleClass="bouton"
            id="boutonHistorique">
        </Button>

        <Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal" />

        <Label
            fx:id="labelScoreDeuxiemeJoueur"
            styleClass="label-nom-joueur">
        </Label>

        <Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal" />

        <Label
            fx:id="labelNomDeuxiemeJoueur"
            styleClass="label-nom-joueur">
        </Label>

        <Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal" />

    </HBox>
    
    <Pane styleClass="petit-espace-vertical" />
    

</VBox>
